<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12123c">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/AppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="100dp"
            android:fontFamily="@font/minotaur"
            android:text="AppName"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/greeting"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AppName"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:text="Welcome Back!"
            android:textColor="#c9c1c5"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/greeting"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/sticky"
            android:text="Ismah Hadirah"
            android:textColor="#FFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="16dp"
            android:background="@color/black"
            android:text="option"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/Hospital"
            android:layout_width="170sp"
            android:layout_height="170sp"
            android:layout_below="@+id/option"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ho" />

        <Button
            android:id="@+id/notification"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="365dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/noti1" />

        <TextView
            android:id="@+id/userslocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Hospital"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:text="User's Current Location"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/map"
            android:layout_width="380dp"
            android:layout_height="230dp"
            android:layout_below="@+id/userslocation"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:background="#FFF"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp">

        </TextView>

        <Button
            android:id="@+id/menubar"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginRight="350dp"
            android:background="@drawable/bar" />


    </RelativeLayout>


</LinearLayout>