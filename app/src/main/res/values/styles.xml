    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar"> //Light Mode
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorSecondary">@color/black</item> //dark text
    </style>


</resources>
