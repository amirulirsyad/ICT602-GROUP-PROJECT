<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <!--Dark Mode-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorContainer">#c9c1c5</item>
        <item name="colorTertiary">#12123c</item>
        <item name="colorAccent">#716671</item>
        <item name="colorSurface">@drawable/cardbackgroud</item>
        <item name="colorOnPrimary">@drawable/cardbackgroundbu</item>
        <item name="colorButtonNormal">@drawable/barwhite</item>
    </style>

    <!--Light Mode-->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar"> //Light Mode
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorSecondary">@color/black</item> //dark text
        <item name="colorContainer">#9a8b93</item> //welcome back!
        <item name="colorTertiary">#e6effe</item> //background
        <item name="colorAccent">#b2bde2</item> //backgroundtext
        <item name="colorSurface">@drawable/cardbackgroundlight</item> //cardbackground welcome
        <item name="colorOnPrimary">@drawable/cardbackgroundlight</item> //cardbackground about us
        <item name="colorButtonNormal">@drawable/barblack</item> //bar icon
    </style>


</resources>
